# Multi-chip host-only applications
SUBDIRS = multichip_mailbox 
SUBDIRS += multichip_sync
SUBDIRS += system_xdma_copy

TARGET ?= all

.PHONY: all clean partial-build finalize-build $(SUBDIRS)

all partial-build finalize-build: $(SUBDIRS)

$(SUBDIRS):
	$(MAKE) -C $@ $(TARGET)

clean:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir clean; \
	done
